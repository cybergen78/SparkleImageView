<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rootLayout">

    <de.jarosz.sparkle.SparkleImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?android:actionBarSize"
            android:background="@color/sparkleColor"/>

    <ScrollView
            android:id="@+id/scrollView"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="?android:actionBarSize"
            tools:context=".MainActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scrollContainer">

            <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/topSpacer"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintBottom_toTopOf="@id/highlightsCardView"/>

            <Switch
                    android:text="@string/retro_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/retroModeSwitch"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toTopOf="@+id/topSpacer"
                    app:layout_constraintBottom_toBottomOf="@+id/topSpacer" android:textStyle="bold"
                    android:textColor="@android:color/white" android:shadowColor="@android:color/black"
                    android:shadowRadius="4" android:shadowDy="2" android:switchPadding="8dp" android:checked="true"/>
            <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/highlightsCardView"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/modulationCardView"
                    app:layout_constraintTop_toBottomOf="@id/topSpacer">
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            style="@style/TextAppearance.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView7"
                            android:text="@string/highlights"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toTopOf="@+id/textView8"/>
                    <TextView
                            android:text="@string/lightness"
                            style="@style/TextAppearance.Subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView8"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/textView7"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toTopOf="@+id/highlightsLightnessSeekBar"/>
                    <TextView
                            tools:text="90 %"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/highlightsLightnessTextView"
                            style="@style/TextAppearance.Value"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            app:layout_constraintTop_toTopOf="@+id/highlightsLightnessSeekBar"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/highlightsLightnessSeekBar"
                            app:layout_constraintBottom_toBottomOf="@+id/highlightsLightnessSeekBar"/>
                    <SeekBar
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/highlightsLightnessSeekBar"
                            android:max="100"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintStart_toEndOf="@+id/highlightsLightnessTextView"
                            app:layout_constraintTop_toBottomOf="@+id/textView8"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toTopOf="@+id/textView11"/>
                    <TextView
                            android:text="@string/amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView11"
                            app:layout_constraintTop_toBottomOf="@+id/highlightsLightnessSeekBar"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp"
                            style="@style/TextAppearance.Subtitle"
                            app:layout_constraintBottom_toTopOf="@+id/highlightsAmountSeekBar"/>
                    <TextView
                            tools:text="0.5 %"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/highlightsAmountTextView"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp"
                            app:layout_constraintEnd_toStartOf="@+id/highlightsAmountSeekBar"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintTop_toTopOf="@+id/highlightsAmountSeekBar"
                            app:layout_constraintBottom_toBottomOf="@+id/highlightsAmountSeekBar"
                            style="@style/TextAppearance.Value"/>
                    <SeekBar
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/highlightsAmountSeekBar"
                            app:layout_constraintTop_toBottomOf="@+id/textView11"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintStart_toEndOf="@+id/highlightsAmountTextView"
                            android:max="100"
                            app:layout_constraintBottom_toTopOf="@+id/textView13"
                            android:layout_marginBottom="8dp"/>
                    <TextView
                            android:text="@string/variability"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView13"
                            style="@style/TextAppearance.Subtitle"
                            app:layout_constraintTop_toBottomOf="@+id/highlightsAmountSeekBar"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp"
                            app:layout_constraintBottom_toTopOf="@+id/highlightsVariabilitySeekBar"/>
                    <TextView
                            tools:text="20 %"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/highlightsVariabilityTextView"
                            app:layout_constraintTop_toTopOf="@+id/highlightsVariabilitySeekBar"
                            app:layout_constraintBottom_toBottomOf="@+id/highlightsVariabilitySeekBar"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp"
                            app:layout_constraintEnd_toStartOf="@+id/highlightsVariabilitySeekBar"
                            android:layout_marginEnd="8dp" style="@style/TextAppearance.Value"/>
                    <SeekBar
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/highlightsVariabilitySeekBar"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/textView13"
                            app:layout_constraintStart_toEndOf="@+id/highlightsVariabilityTextView"
                            android:max="100"
                            app:layout_constraintBottom_toTopOf="@+id/textView15"
                            android:layout_marginBottom="8dp"/>
                    <TextView
                            android:text="@string/replacement_speed_factor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView15"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/highlightsVariabilitySeekBar"
                            style="@style/TextAppearance.Subtitle"
                            app:layout_constraintBottom_toTopOf="@+id/highlightsReplacementSpeedFactorSeekBar"/>
                    <TextView
                            tools:text="0.5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/highlightsReplacementSpeedFactorTextView"
                            app:layout_constraintTop_toTopOf="@+id/highlightsReplacementSpeedFactorSeekBar"
                            app:layout_constraintBottom_toBottomOf="@+id/highlightsReplacementSpeedFactorSeekBar"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp"
                            app:layout_constraintEnd_toStartOf="@+id/highlightsReplacementSpeedFactorSeekBar"
                            android:layout_marginEnd="8dp" style="@style/TextAppearance.Value"/>
                    <SeekBar
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/highlightsReplacementSpeedFactorSeekBar"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/textView15"
                            app:layout_constraintStart_toEndOf="@+id/highlightsReplacementSpeedFactorTextView"
                            android:max="100" app:layout_constraintBottom_toTopOf="@+id/textView9"
                            android:layout_marginBottom="8dp"/>
                    <TextView
                            android:text="@string/sensitivity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView9"
                            style="@style/TextAppearance.Subtitle"
                            app:layout_constraintTop_toBottomOf="@+id/highlightsReplacementSpeedFactorSeekBar"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintBottom_toTopOf="@+id/highlightsSensitivitySeekBar"/>
                    <TextView
                            tools:text="1.5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/highlightsSensitivityTextView"
                            style="@style/TextAppearance.Value"
                            app:layout_constraintTop_toTopOf="@+id/highlightsSensitivitySeekBar"
                            app:layout_constraintBottom_toBottomOf="@+id/highlightsSensitivitySeekBar"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp"
                            app:layout_constraintEnd_toStartOf="@+id/highlightsSensitivitySeekBar"
                            android:layout_marginEnd="8dp"/>
                    <SeekBar
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/highlightsSensitivitySeekBar"
                            app:layout_constraintTop_toBottomOf="@+id/textView9"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintStart_toEndOf="@+id/highlightsSensitivityTextView"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="8dp"
                            android:max="100"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/modulationCardView"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/varianceCardView"
                    app:layout_constraintTop_toBottomOf="@+id/highlightsCardView">
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            style="@style/TextAppearance.Title"
                            android:text="@string/modulation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView6"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toTopOf="@id/modeContainer"/>
                    <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:id="@+id/modeContainer"
                            android:layout_marginBottom="16dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:clipChildren="true"
                            app:cardCornerRadius="16dp"
                            app:layout_constraintTop_toBottomOf="@id/textView6"
                            app:layout_constraintBottom_toTopOf="@id/textView10"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent">
                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:divider="@drawable/divider"
                                android:showDividers="middle">
                            <ToggleButton
                                    android:textOn="@string/device_motion"
                                    android:textOff="@string/device_motion"
                                    android:paddingStart="16dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checked="true"
                                    android:id="@+id/modeDeviceMotion"
                                    tools:ignore="RtlSymmetry"/>
                            <ToggleButton
                                    android:textOn="@string/touch_distance"
                                    android:textOff="@string/touch_distance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/modeTouchDistance"/>
                            <ToggleButton
                                    android:textOn="@string/touch_angle"
                                    android:textOff="@string/touch_angle"
                                    android:paddingEnd="16dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/modeTouchAngle"
                                    tools:ignore="RtlSymmetry"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <TextView
                            style="@style/TextAppearance.Subtitle"
                            android:id="@+id/textView10"
                            android:text="@string/sensitivity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintTop_toBottomOf="@id/modeContainer"
                            app:layout_constraintBottom_toTopOf="@+id/sensitivitySeekBar"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>
                    <TextView
                            tools:text="1.0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/sensitivityTextView"
                            app:layout_constraintTop_toTopOf="@+id/sensitivitySeekBar"
                            app:layout_constraintBottom_toBottomOf="@+id/sensitivitySeekBar"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp"
                            app:layout_constraintEnd_toStartOf="@+id/sensitivitySeekBar"
                            android:layout_marginEnd="8dp" style="@style/TextAppearance.Value"/>
                    <SeekBar
                            android:id="@+id/sensitivitySeekBar"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView10"
                            app:layout_constraintBottom_toTopOf="@+id/textView3"
                            app:layout_constraintStart_toEndOf="@+id/sensitivityTextView"
                            android:max="200"/>
                    <TextView
                            android:text="@string/dot_scale"
                            style="@style/TextAppearance.Subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView3"
                            android:layout_marginStart="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/sensitivitySeekBar"
                            app:layout_constraintBottom_toTopOf="@+id/scaleSeekBar"/>
                    <SeekBar
                            style="@style/Widget.AppCompat.SeekBar"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:max="100"
                            android:id="@+id/scaleSeekBar"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintStart_toEndOf="@+id/scaleTextView"
                            app:layout_constraintTop_toBottomOf="@+id/textView3"/>
                    <TextView
                            tools:text="1x"
                            style="@style/TextAppearance.Value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/scaleTextView"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/scaleSeekBar"
                            app:layout_constraintBottom_toBottomOf="@+id/scaleSeekBar"
                            app:layout_constraintTop_toTopOf="@+id/scaleSeekBar"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/varianceCardView"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/waveTypeCardView"
                    app:layout_constraintTop_toBottomOf="@+id/modulationCardView">
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            style="@style/TextAppearance.Title"
                            android:id="@+id/textView4"
                            android:text="@string/variance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toTopOf="@+id/textView2"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>
                    <TextView
                            style="@style/TextAppearance.Subtitle"
                            android:id="@+id/textView2"
                            android:text="@string/lightness_variance_up"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintStart_toEndOf="@+id/textView"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView4"
                            app:layout_constraintBottom_toTopOf="@id/lightnessVarianceUpSeekBar"/>
                    <TextView
                            tools:text="15 %"
                            style="@style/TextAppearance.Value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/lightnessVarianceUpTextView"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintEnd_toStartOf="@+id/lightnessVarianceUpSeekBar"
                            app:layout_constraintStart_toEndOf="@+id/lightnessVarianceDownTextView"
                            app:layout_constraintTop_toTopOf="@+id/lightnessVarianceUpSeekBar"
                            app:layout_constraintBottom_toBottomOf="@+id/lightnessVarianceUpSeekBar" android:ems="2"/>
                    <SeekBar
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/lightnessVarianceUpSeekBar"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintStart_toEndOf="@+id/lightnessVarianceUpTextView"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView2"
                            app:layout_constraintBottom_toTopOf="@id/textView5"/>
                    <TextView
                            android:text="@string/lightness_variance_down"
                            style="@style/TextAppearance.Subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintHorizontal_chainStyle="spread_inside"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/textView2"
                            app:layout_constraintBottom_toTopOf="@+id/lightnessVarianceDownSeekBar"/>
                    <SeekBar
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/lightnessVarianceDownSeekBar"
                            android:layoutDirection="rtl"
                            android:layout_marginStart="8dp"
                            app:layout_constraintEnd_toStartOf="@+id/lightnessVarianceDownTextView"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@id/lightnessVarianceUpSeekBar"
                            app:layout_constraintBottom_toBottomOf="@id/lightnessVarianceUpSeekBar"/>
                    <TextView
                            tools:text="15 %"
                            style="@style/TextAppearance.Value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/lightnessVarianceDownTextView"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintEnd_toStartOf="@+id/lightnessVarianceUpTextView"
                            app:layout_constraintStart_toEndOf="@id/lightnessVarianceDownSeekBar"
                            app:layout_constraintTop_toTopOf="@id/lightnessVarianceDownSeekBar"
                            app:layout_constraintBottom_toBottomOf="@id/lightnessVarianceDownSeekBar" android:ems="2"/>
                    <TextView
                            style="@style/TextAppearance.Subtitle"
                            android:id="@+id/textView5"
                            android:text="@string/wave_speed_variance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/lightnessVarianceUpSeekBar"
                            app:layout_constraintBottom_toTopOf="@+id/waveSpeedVarianceTextView"/>
                    <TextView
                            tools:text="1.0"
                            style="@style/TextAppearance.Value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/waveSpeedVarianceTextView"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintEnd_toStartOf="@+id/waveSpeedVarianceSeekBar"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/waveSpeedVarianceSeekBar"
                            app:layout_constraintBottom_toBottomOf="@+id/waveSpeedVarianceSeekBar"/>
                    <SeekBar
                            android:id="@+id/waveSpeedVarianceSeekBar"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginEnd="8dp"
                            android:max="100"
                            app:layout_constraintStart_toEndOf="@+id/waveSpeedVarianceTextView"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView5"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/waveTypeCardView"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/varianceCardView"
                    app:layout_constraintBottom_toTopOf="@id/bottomSpacer">
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            style="@style/TextAppearance.Title"
                            android:text="@string/wave_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/waveTypeTitle"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toTopOf="@+id/triangleButton"/>
                    <de.jarosz.sparkle.FunctionButton
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:id="@+id/triangleButton"
                            android:layout_marginStart="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginEnd="4dp"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            app:waveType="triangle"
                            app:zeroAxisEnabled="true"
                            app:layout_constraintTop_toBottomOf="@+id/waveTypeTitle"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/sinusoidButton"
                            style="@style/FunctionButton"
                            android:checked="true"/>
                    <de.jarosz.sparkle.FunctionButton
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:id="@+id/sinusoidButton"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="4dp"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            app:waveType="sinusoid"
                            app:zeroAxisEnabled="true"
                            app:layout_constraintBottom_toBottomOf="@+id/triangleButton"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/triangleButton"
                            app:layout_constraintStart_toEndOf="@+id/triangleButton"
                            style="@style/FunctionButton"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/bottomSpacer"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/waveTypeCardView"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?android:actionBarSize" android:id="@+id/constraintLayout">
        <com.madrapps.pikolo.HSLColorPicker
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/colorPicker"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            app:popupTheme="?attr/actionBarPopupTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar"
            app:elevation="4dp"/>
</FrameLayout>